<?xml version="1.0" encoding="UTF-8" ?>
<Configuration>
  <Appenders>
    <File name="file" fileName="${LOG_HOME}/helen_bot.log" append="true" maxFileSize="10MB" maxBackupIndex="500">
      <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} %-5p %c{1}:%L | %m%n"/>
    </File>
  </Appenders>
  <Loggers>
    <Root level="INFO">
      <AppenderRef ref="file" />
    </Root>
  </Loggers>
</Configuration>